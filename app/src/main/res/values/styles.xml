<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="splashscreen" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/splashstatus</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="login" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/splashstatus</item>
        <item name="colorPrimary">@color/whitecolor</item>
        <item name="colorPrimaryDark">@color/splashstatus</item>
        <item name="android:textColorPrimary">@color/whitecolor</item>
        <item name="colorAccent">@color/loginasscent</item>
        <item name="colorControlActivated">@color/splashstatus</item>
        <item name="colorControlNormal">@color/loginasscent</item>
        <item name="colorControlHighlight">@color/splashscreenbackgoundcolor</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
